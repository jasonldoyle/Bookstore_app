<%- include('partials/header') %>

<!-- Bootstrap Hero Carousel showing bookstore promotions -->
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
  <!-- Carousel indicators for slide nav -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>

  <!-- Carousel slides for promos -->
  <div class="carousel-inner">
    <!-- First slide - New Books -->
    <div class="carousel-item active">
      <img src="/images/book1.jpg" class="d-block w-100" alt="Slide 1">
      <div class="carousel-caption d-none d-md-block text-start">
        <h1 class="display-4 fw-bold">New Books Each Week!</h1>
        <p class="lead">Explore a range of 10,000 books in every genre, with new additions added to our shelves weekly!</p>
        <!-- Action button linking to products page -->
        <a href="/products" class="btn btn-success btn-lg mt-3">View Products</a>
      </div>
    </div>

    <!-- Second slide - Rare books support -->
    <div class="carousel-item">
      <img src="/images/book2.jpg" class="d-block w-100" alt="Slide 2">
      <div class="carousel-caption d-none d-md-block text-start">
        <h1 class="display-4 fw-bold">Looking for something rare?</h1>
        <p class="lead">Click the button below and tell us about the book you're looking for and our team will help!</p>
        <a href="/contact" class="btn btn-success btn-lg mt-3">Contact Us</a>
      </div>
    </div>

    <!-- Third slide - hidden Gems -->
    <div class="carousel-item">
      <img src="/images/book3.jpg" class="d-block w-100" alt="Slide 3">
      <div class="carousel-caption d-none d-md-block text-start">
        <h1 class="display-4 fw-bold">Uncover Hidden Gems</h1>
        <p class="lead">Independent authors, biographies, and more</p>
        <a href="/products" class="btn btn-success btn-lg mt-3">Explore</a>
      </div>
    </div>
  </div>

  <!-- Carousel control buttons -->
  <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<!-- End - Hero Carousel -->

<!-- Featured Books Section -->
<div class="container my-5">
  <div class="text-center mb-5">
    <h2 class="mb-3">Featured Books</h2>
    <!-- Link to view more products -->
    <a href="/products" class="btn btn-outline-primary">View More</a>
  </div>

  <!-- Check if there are featured books to display -->
  <% if (featuredBooks && featuredBooks.length > 0) { %>
    <!-- Bootstrap carousel for featured books -->
    <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
      <div class="carousel-inner">
        <!-- Loop through featured books in chunks of 3 -->
        <% for (let i = 0; i < featuredBooks.length; i += 3) { %>
          <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
            <div class="d-flex justify-content-center gap-4">
              <% featuredBooks.slice(i, i + 3).forEach(book => { %>
                <!-- Card for each featured book -->
                <div class="card" style="width: 18rem;">
                  <img src="/images/<%= book.image %>" class="card-img-top" style="height: 250px; object-fit: cover;" alt="<%= book.title %>">
                  <div class="card-body text-center">
                    <h5 class="card-title"><%= book.title %></h5>
                    <p class="card-text">By <%= book.author %></p>
                    <p class="card-text">‚Ç¨<%= book.price.toFixed(2) %></p>
                    <a href="/products" class="btn btn-outline-primary btn-sm">View More</a>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Carousel controls -->
      <button class="carousel-control-prev bg-dark bg-opacity-50 rounded-circle" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev" style="width: 3rem; height: 3rem;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next bg-dark bg-opacity-50 rounded-circle" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next" style="width: 3rem; height: 3rem;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  <% } else { %>
    <!-- Message when no featured books are there -->
    <p class="text-center text-muted">No featured books available at the moment.</p>
  <% } %>
</div>
<!-- End of Featured Books Section -->

